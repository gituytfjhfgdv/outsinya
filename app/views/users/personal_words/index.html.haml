personal_words

positive list
%br
- @words&.where(type: 'PositiveWord')&.each do |word|
  = word.content
  = button_to '削除', "/users/personal_words/#{word.id}", method: :delete
  %br

negative list
%br
- @words&.where(type: 'NegativeWord')&.each do |word|
  = word.content
  = button_to '削除', "/users/personal_words/#{word.id}", method: :delete
  %br

-#= render 'layouts/error_message', model: @personal_word if @personal_word
= form_with model: [:users, @personal_word], method: :post, local: true  do |form|
  = form.radio_button :type, :positive_word, checked: true
  = form.label :type_positive_word, '嬉しい言葉'
  = form.radio_button :type, :negative_word
  = form.label :type_negative_word, '苦手な言葉'
  = form.text_field :content
  = form.submit
